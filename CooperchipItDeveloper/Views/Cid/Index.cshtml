@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<CooperchipItDeveloper.Domain.Entities.Cid>

@{
    ViewData["Title"] = "Medical Management Sys - Lista de CID";
}

<div class="row" style="margin-top: 12px;">

    <div class="col-lg-12">
        <a asp-controller="Cid" asp-action="Create" class="create mb-4 btn btn-outline-success" title="Criar Novo">Criar Novo</a>
        <a asp-controller="Home" asp-action="Index" class="mb-4 btn btn-outline-secondary" title="Home">Home</a>

        <div class="animated fadeInRightBig">
            <div class="panel panel-primary toggle">
                <div class="panel-heading bg-primary text-white" style="padding: 15px 20px;">
                    <h4 class="panel-title"><i class="fa fa-magic"></i> @ViewData["Title"]</h4>
                </div>
                <div class="panel-body">

                    <form asp-action="Index" class="form-action no-color mt-3" method="get">
                        <div>
                            <p>
                                <input type="text" name="stringBusca" value="@ViewData["filtroAtual"]" placeholder="  Buscar por..." >
                                <input type="submit" value="Buscar" class="btn btn-outline-secondary btn-sm" > | <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Retornar para a lista completa</a>
                            </p>
                        </div>
                    </form>

                    <div class="row col-12">
                        <div class="form-group" style="margin: 10px 15px 2px 0px;">
                            <div class="pull-left">
                                Listando registros de @Model.FirstItemOnPage a @Model.LastItemOnPage de um total de @Model.TotalItemCount
                            </div>
                        </div>
                    </div>

                    <table id="myTableCid" class="table table-striped table-bordered" style="width:100%" cellspacing="0" width="100%">
                        <colgroup>
                            <col style="width:80px" /> 
                            <col style="width:120px" /> 
                            <col />                      
                            <col style="width:130px" />
                        <colgroup>
                        <thead>
                            <tr>
                                <th><a asp-action="Index" 
                                    asp-route-stringBusca="@ViewData["FiltroAtual"]"
                                       asp-route-ordenacao="@ViewData["OrderByInternalId"]" class="link-primary text-decoration-none">ID&nbsp;Interno&nbsp;<i class="bi bi-arrows-collapse"></i></a>
                                </th>

                                <th><a asp-action="Index"
                                    asp-route-stringBusca="@ViewData["FiltroAtual"]"
                                       asp-route-ordenacao="@ViewData["OrderByCodigo"]" class="link-primary text-decoration-none">Código<i class="bi bi-arrows-collapse"></i></a>
                                </th>

                                <th><a asp-action="Index"
                                    asp-route-stringBusca="@ViewData["FiltroAtual"]"
                                       asp-route-ordenacao="@ViewData["OrderByDiagnostico"]" class="link-primary text-decoration-none">Diagnóstico<i class="bi bi-arrows-collapse"></i></a>
                                </th>
                                <th class="text-center">Ação</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.CidInternalId
                                    </td>
                                    <td>
                                        @item.Codigo
                                    </td>
                                    <td>
                                        @item.Diagnostico
                                    </td>
                                    <td class="text-center">
                                        <a asp-controller="Cid" asp-action="Edit" asp-route-id="@item.Id" class="edit me-2" title="Editar"><i class="bi bi-pen-fill"></i></a>

                                        <a href="#" class="details me-2" data-id="@item.Id" title="Detalhes"><i class="bi bi-info-circle"></i></a>

                                        <a href="#" class="delete me-2" data-id="@item.Id" title="Deletar"><i class="bi bi-trash3-fill"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>

                        <tfoot>
                            <tr>
                                <th>ID Interno</th>
                                <th>Código</th>
                                <th>Diagnóstico</th>
                                <th class="text-center">Ação</th>
                            </tr>
                        </tfoot>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row col-12">
    <div class="form-group" style="margin: 15px 15px 5px 15px;">
        <div class="pull-right">
            @Html.PagedListPager(Model,
            page => Url.Action("Index", "Cid", new { pagina = page, ordenacao = ViewData["ordenacao"], stringBusca = ViewData["filtroAtual"] }),
                        new PagedListRenderOptions
                        {
                            UlElementClasses = new[] { "pagination" },
                            LiElementClasses = new[] { "page-item" },
                            PageClasses = new[] { "page-link" },
                            DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                            DisplayLinkToNextPage = PagedListDisplayMode.Always
                        })
        </div>
    </div>
</div>

<div class="modal fade modal-style6"
     id="modalCid"
     tabindex="-1"
     role="dialog"
     aria-labelledby="myModalLabel"
     aria-hidden="true">
</div>


@section Scripts {
    <script src="~/js/cid.js"></script>
}