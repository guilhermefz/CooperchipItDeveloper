@using Cooperchip.ItDeveloper.Domain.Entities
@model EstadoPaciente

@{
    ViewData["Title"] = "Adicionar Estado do Paciente";
}

<vc:cabecalho titulo="Medical Management-Sys / Módulo Estado dos Pacientes"
              subtitulo="Módulo de Administração de Pacientes"></vc:cabecalho>


<div class="row">

<div class="panel panel-success">

    <div class="panel panel-heading">
        <h3>Adicionar Estado do Paciente</h3>
    </div>
</div>

    <div class="panel panel-body col-md-12">
        <form asp-controller="EstadoPaciente" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" placeholder="Digite a descrição..." class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar Estado Paciente" class="btn btn-success" />
            </div>
        </form>

    <div>
        <a class="btn btn-info" asp-controller="EstadoPaciente" asp-action="Index">Voltar para a Lista</a>
    </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}