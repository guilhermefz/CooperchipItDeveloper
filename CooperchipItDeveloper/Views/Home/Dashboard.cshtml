@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid m-0">
    <div class="row">
        <div class="row g-3 mb-4 position-relative z-n1">
                <div class="col-6 col-md-3">
                    <div class="card card-stat p-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <div class="small-muted">Pacientes Hoje</div>
                                <div class="h4 mb-0">42</div>
                            </div>
                            <div class="text-end">
                                <div class="icon-circle"><i class="bi bi-person-lines-fill fs-4 text-primary"></i></div>
                            </div>
                        </div>
                        <div class="mt-3">
                            <div class="small-muted">Comparado com ontem <strong>+8%</strong></div>
                        </div>
                    </div>
                </div>

            <div class="col-6 col-md-3 position-relative z-n1">
                    <div class="card card-stat p-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <div class="small-muted">Novos</div>
                                <div class="h4 mb-0">7</div>
                            </div>
                            <div class="text-end">
                                <div class="icon-circle"><i class="bi bi-person-plus fs-4 text-primary"></i></div>
                            </div>
                        </div>
                        <div class="mt-3 small-muted">Meta mensal: 120</div>
                    </div>
                </div>

            <div class="col-6 col-md-3 position-relative z-n1">
                    <div class="card card-stat p-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <div class="small-muted">Agendamentos</div>
                                <div class="h4 mb-0">18</div>
                            </div>
                            <div class="text-end">
                                <div class="icon-circle"><i class="bi bi-calendar3 fs-4 text-primary"></i></div>
                            </div>
                        </div>
                        <div class="mt-3 small-muted">Hoje: 5 presenciais</div>
                    </div>
                </div>

            <div class="col-6 col-md-3 position-relative z-n1">
                    <div class="card card-stat p-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <div class="small-muted">Satisfação</div>
                                <div class="h4 mb-0">4.8/5</div>
                            </div>
                            <div class="text-end">
                                <div class="icon-circle"><i class="bi bi-star-fill fs-4 text-primary"></i></div>
                            </div>
                        </div>
                        <div class="mt-3 small-muted">Avaliações: 128</div>
                    </div>
                </div>
            </div>

            