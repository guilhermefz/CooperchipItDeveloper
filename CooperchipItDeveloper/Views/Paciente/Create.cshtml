@using Cooperchip.ITDeveloper.Application.Areas.Pacientes.Models
@using Cooperchip.ItDeveloper.Domain.Enuns
@model PacienteFormModel

@{
    ViewData["Title"] = "Cadastro de Pacientes";
}

<h2>Cadastro de Pacientes</h2>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label asp-for="Nome" class="control-label">Paciente</label>
        <input asp-for=Nome class="form-control" placeholder="Digite o nome do paciente" autocomplete="off">
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DataNascimento" class="control-label">Data de Nascimento</label>
        <input asp-for=DataNascimento class="form-control" placeholder="Digite o nascimento do paciente">
        <span asp-validation-for="DataNascimento" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DataInternacao" class="control-label">Data de Internação</label>
        <input asp-for=DataInternacao class="form-control" placeholder="Digite a data de internação do paciente">
        <span asp-validation-for="DataInternacao" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="control-label">Email</label>
        <input asp-for=Email class="form-control" placeholder="Digite o Email do paciente">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Cpf" class="control-label">CPF</label>
        <input asp-for=Cpf class="form-control" placeholder="Digite o CPF do paciente">
        <span asp-validation-for="Cpf" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Rg" class="control-label">RG</label>
        <input asp-for=Rg class="form-control" placeholder="Digite o RG do paciente">
    </div>
    <div class="mb-3">
        <label asp-for="RgOrgao" class="control-label">RG Orgão</label>
        <input asp-for=RgOrgao class="form-control" placeholder="Digite o orgão RG do paciente">
    </div>
    <div class="mb-3">
        <label asp-for="RgDataEmissao" class="control-label">Data de Emissão do RG</label>
        <input asp-for=RgDataEmissao class="form-control" placeholder="Digite a data de emissão do RG">
    </div>
    <div class="mb-3">
        <label asp-for="Motivo" class="control-label">Motivo da internação</label>
        <input asp-for=Motivo class="form-control" placeholder="Digite o motivo da internação do paciente">
        <span asp-validation-for="Motivo" class="text-danger"></span>
    </div>
    <div class="form-check form-switch">
        <input class="form-check-input" asp-for="Ativo" type="checkbox" role="switch" id="switchCheckDefault">
        <label class="form-check-label" for="switchCheckAtivo">Paciente Ativo</label>
    </div>
    <div>
        <label asp-for="EstadoPacienteId" class="control-label"></label>
        <select asp-for="EstadoPacienteId" asp-items="Model.EstadosPaciente" class="form-select">
            <option value="">-- Selecione o estado do paciente--</option>
        </select>
        <span asp-validation-for="EstadoPacienteId" class="text-danger"></span>
    </div>
    <div class="mt-5 mb-3">
        <label asp-for="TipoPaciente" class="control-label"></label>
        <select class="form-select" asp-for="TipoPaciente" asp-items="@(new SelectList(Enum.GetValues(typeof(TipoPaciente))))">
            <option value="">-- Selecione o tipo de paciente --</option>
        </select>
        <span asp-validation-for="TipoPaciente" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Sexo" class="control-label"></label>
        <select class="form-select" asp-for="Sexo" asp-items="@(new SelectList(Enum.GetValues(typeof(Sexo))))" class="form-control">
            <option value="">-- Selecione o sexo do paciente --</option>
        </select>
        <span asp-validation-for="Sexo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-success" />
    </div>
</form>