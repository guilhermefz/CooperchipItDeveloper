@using Cooperchip.ITDeveloper.Application.Areas.Pacientes.Models
@using Cooperchip.ItDeveloper.Domain.Enuns
@using Cooperchip.ItDeveloper.Mvc.Models
@model PacienteFormModel
@{
    ViewData["Title"] = "Edição de Paciente";
}

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <q-field for="Nome" />

    <div class="mb-3">
        <label asp-for="DataNascimento" class="control-label">Data de Internação</label>
        <input asp-for=DataNascimento class="form-control" placeholder="Digite a data de nascimento do paciente">
        <span asp-validation-for="DataNascimento" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DataInternacao" class="control-label">Data de Internação</label>
        <input asp-for=DataInternacao class="form-control" placeholder="Digite a data de internação do paciente">
        <span asp-validation-for="DataInternacao" class="text-danger"></span>
    </div>

    <q-field for="Email" />

    <q-field for="Cpf" />

    <q-field for="Rg" />

    <q-field for="RgOrgao" />

    <div class="mb-3">
        <label asp-for="RgDataEmissao" class="control-label">Data de Emissão do RG</label>
        <input asp-for=RgDataEmissao class="form-control" placeholder="Digite a data de emissão do RG do paciente">
        <span asp-validation-for="RgDataEmissao" class="text-danger"></span>
    </div>

    <q-field for="Motivo" />

    <div class="form-check form-switch">
        <input class="form-check-input" asp-for="Ativo" type="checkbox" role="switch" id="switchCheckDefault">
        <label class="form-check-label" for="switchCheckAtivo">Paciente Ativo</label>
    </div>

    <q-select for="EstadoPacienteId" items="ViewBag.EstadoPaciente" />
    
    <q-select for="TipoPaciente" items="@(new SelectList(Enum.GetValues(typeof(TipoPaciente))))" />
    
    <q-select for="Sexo" items="@(new SelectList(Enum.GetValues(typeof(Sexo))))" />

    <div class="form-group">
        <input type="submit" value="Edit" class="btn btn-success" />
    </div>
</form>
