@using CooperchipItDeveloper.Mvc.Extensions.ExtensionsMethods
@model IEnumerable<PacienteViewModel>

@{
    ViewData["Title"] = "Gráfico por Estado de Paciente";
}

<div class="row">
    <div class="panel panel-heading">
        <h3 class="text-center mb-3">@ViewData["Title"]</h3>
    </div>

    <p>
        <a asp-action="Index" class="btn btn-outline-dark">Retornar</a>
    </p>

    <div class="panel panel-body">
        <table class="table table-striped table-hover table-bordered">
            <thead class="table-primary">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Nome)</th>
                    <th>@Html.DisplayNameFor(model => model.DataNascimento)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.Cpf)</th>
                    <th>@Html.DisplayNameFor(model => model.EstadoPaciente)</th>
                    <th>@Html.DisplayNameFor(model => model.Sexo)</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                        <td>@Html.DisplayFor(modelItem => item.DataNascimento)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Cpf)</td>
                        <td>@Html.DisplayFor(modelItem => item.EstadoPaciente!.Descricao)</td>
                        <td>@Html.DisplayFor(modelItem => item.Sexo)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-info"><i class="bi bi-pen"></i></a>
                            <a href="#" class="details btn btn-outline-secondary" data-id="@item.Id" title="Detalhes"><i class="bi bi-eye"></i></a>
                            <a href="#" class="delete btn btn-outline-danger" data-id="@item.Id" title="Excluir"><i class="bi bi-trash3-fill"></i></a>

                            <a asp-action="ReportForEstadoPaciente" asp-route-id=@item.EstadoPacienteId class="btn btn-outline-primary btn-sm"><span class="fa fa-filter fa-2x" title="Paciente por Estado"></span> </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>