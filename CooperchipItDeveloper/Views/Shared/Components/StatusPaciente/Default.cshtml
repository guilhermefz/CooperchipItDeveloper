@using CooperchipItDeveloper.Mvc.Extensions.ViewComponents
@model StatusPacienteViewModel


<div class="col-6 col-md-3">
    <div class="@Model.ClassContainer" style="position: relative; z-index: -1;">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <div class="small-muted">Pacientes em estado @Model.Descricao</div>
                <div class="h4 mb-0">@Model.Quantidade</div>
            </div>
            <div class="text-end">
                <div class="icon-circle"><i class="bi bi-person-fill-exclamation fs-4 text-primary"></i></div>
            </div>
        </div>
        <div class="mt-3">
            <div class="small-muted">
            </div>
        </div>
        <div class="progress" aria-valuenow="@(Math.Round(Model.Percentual))" aria-valuemin="0" aria-valuemax="100">
            <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: @(Math.Round(Model.Percentual))%"></div>
        </div>
    </div>
</div> 
